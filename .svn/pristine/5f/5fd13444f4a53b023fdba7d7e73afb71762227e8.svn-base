<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title data-i18n="app.name"></title>
		<link rel="stylesheet" href="/css/normalize.css"/>
		<link rel="stylesheet" href="/css/main.css"/>
	</head>
	<body>
		<div class="wrapper">
			<header class="non-b"></header>
			<div class="content">
				<div class="msg-card">
					<div class="logo-wrap">
						<a href="javascript" class="logo">logo</a>
					</div>
					<div class="card-body">
					<% if(mt == 1) { %>
						<p data-i18n="message.register_success_info"></p>
					<% } else if(mt == 2) { %>
						<p data-i18n="[html]message.inactivate_info"></p>
					<% } else if(mt == 3) { %>
						<p data-i18n="[html]message.activate_success_info"></p>
					<% } else if(mt == 4) { %>
						<p data-i18n="[html]message.activate_error_info"></p>
					<% } else if(mt == 5) { %>
						<p data-i18n="message.resend_mail_info"></p>
						<form action="/reactivate" method="post">
							<input id="account" name="account" type="text" data-i18n="[placeholder]signup.form_label_email" />
							<input id="passwd" name="passwd" type="password" data-i18n="[placeholder]signup.form_label_password" />
							<% if(typeof errMsg !== 'undefined' && errMsg != '') { %>
							<span class="err-msg"><%= errMsg %></span>
							<% } %>
							<input type="submit" class="btn btn-submit" data-i18n="[value]btn.ok" />
						</form>
					<% } else { %>
						<p data-i18n="message.sys_err_conn_adm_info"></p>
					<% } %>
					</div>
				</div>
				<div id="content-switch">
					<p>
						<span data-i18n="tpl.back_to"></span><a href="/login" data-i18n="signup.login"></a>
					</p>
				</div>
			</div>
			<%- include ../template/footer %>
		</div>
		<!--[if lt IE 9]>       <script type="text/javascript" src="/js/libs/jquery/jquery-1.10.2.js"></script> <![endif]-->
		<!--[if gte IE 9]><!--> <script type="text/javascript" src="/js/libs/jquery/jquery-2.0.3.js"></script> <!--<![endif]-->
		<script type="text/javascript" src="/js/libs/jquery/plugin/i18next-1.7.7.min.js"></script>
		<script type="text/javascript">
		$(document).ready(function() {
			var options = {
				detectLngQS: 'lang',
				cookieName: 'lang',
				ns: { namespaces: ['translation'], defaultNs: 'translation'},
				resGetPath: '/locales/resources.json?lng=__lng__&ns=__ns__',
				dynamicLoad: true,
				sendMissing: true,
				useLocalStorage: false,
				sendMissingTo: 'current'
			};
			$.i18n.init(options, function() {
				$('html').i18n();
			});
		});
		</script>
	</body>
</html>